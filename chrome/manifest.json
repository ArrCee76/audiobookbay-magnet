{
  "manifest_version": 3,
  "name": "ABB Magnet",
  "version": "2.0",
  "description": "Auto-detects torrent hashes on AudioBookBay and launches magnet links directly to your client.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "*://audiobookbay.lu/*",
    "*://audiobookbay.se/*",
    "*://audiobookbay.is/*",
    "*://audiobookbay.fi/*",
    "*://audiobookbay.com/*",
    "*://www.audiobookbay.lu/*",
    "*://www.audiobookbay.se/*",
    "*://www.audiobookbay.is/*",
    "*://www.audiobookbay.fi/*",
    "*://www.audiobookbay.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://audiobookbay.lu/*",
        "*://audiobookbay.se/*",
        "*://audiobookbay.is/*",
        "*://audiobookbay.fi/*",
        "*://audiobookbay.com/*",
        "*://www.audiobookbay.lu/*",
        "*://www.audiobookbay.se/*",
        "*://www.audiobookbay.is/*",
        "*://www.audiobookbay.fi/*",
        "*://www.audiobookbay.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
